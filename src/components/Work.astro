---
interface Props {
    title: string;
    img: string[];
    description: string;
}

const { title, img, description } = Astro.props;
---

<div>
    <div class="title-container">
        <h2>{title}</h2>
        <div class="zoom-button">
            <a href=""><img src="./zoom-in.svg" alt="ver trabajo" /></a>
        </div>
    </div>

    <div class="img-container">
        {
            img.map((i) => (
                <div class="img-wrapper" data-active="false">
                    <img src={`../images/${i}`} alt={title} />
                    <div class="img-caption">
                        <p>{description}</p>
                    </div>
                </div>
            ))
        }
    </div>
    <slot />
</div>

<style>
    .title-container {
        display: flex;
        gap: 1rem;
        align-items: center;
    }
    h2 {
        position: relative;
        display: inline-block;
        z-index: 2;
    }

    h2::after {
        content: "";
        position: absolute;
        width: 50%;
        height: 0.5rem;
        background-color: var(--main-color);
        bottom: 0;
        left: 0;
        z-index: -1;
    }

    img {
        max-width: 100%;
    }

    .img-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        justify-content: center;
    }
    .zoom-button {
        background-color: var(--main-color);
        width: 3rem;
        height: 3rem;
        border-radius: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .zoom-button a {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 3rem;
        height: 3rem;
    }

    .zoom-button img {
        width: 1.8rem;
        height: 1.8rem;
        filter: brightness(0) invert(1);
    }

    .img-wrapper {
        position: relative;
        cursor: pointer;
    }

    .img-caption {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 1rem;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    @media (hover: hover) {
        .img-wrapper:hover .img-caption {
            opacity: 1;
        }
    }

    .img-wrapper[data-active="true"] .img-caption {
        opacity: 1;
    }

    @media screen and (min-width: 765px) {
        .img-container {
            margin: 2rem;
            display: flex;
            flex-direction: row;
            justify-content: center;
            flex-wrap: wrap;
            gap: 2rem;
        }
        .img-container img {
            width: 20rem;
            height: auto;
            margin: auto;
        }
    }
</style>
